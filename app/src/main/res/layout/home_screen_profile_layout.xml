<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/voices_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/voices_header" />

        <ImageView
            android:id="@+id/soundwave_left"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/voices_header"
            android:layout_toLeftOf="@+id/profile_pic"
            android:src="@drawable/soundwave"/>
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/voices_header"
            tools:src="@drawable/profile_pic"/>
        <ImageView
            android:id="@+id/soundwave_right"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/voices_header"
            android:layout_toRightOf="@id/profile_pic"
            android:src="@drawable/soundwave"/>
        <ImageView
            android:id="@+id/microphone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_pic"
            android:src="@drawable/microphone"
            android:clickable="true"
            android:onClick="recordMemo"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/recycler_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_layout">


    </FrameLayout>
</RelativeLayout>