<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_item_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_item_view"
                android:layout_width="77dp"
                android:layout_height="73dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/linda"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="1dp" />

            <ImageButton
                android:id="@+id/play_button_item_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:layout_toRightOf="@+id/profile_image_item_view"
                android:background="@color/colorPrimary"
                android:onClick="startPlay"
                android:src="@drawable/play_one" />

            <SeekBar
                android:id="@+id/soundwave_item_view"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/play_button_item_view"
                android:background="@drawable/accent_border"
                android:src="@drawable/soundwave" />

            <ToggleButton
                android:id="@+id/favorite_button"
                android:layout_width="41dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_favorite_border_black_24dp"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <ImageButton
                android:id="@+id/microphone_item_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/favorite_button"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/soundwave_item_view"
                android:background="@color/colorPrimary"
                android:onClick="recordAudio"
                android:src="@drawable/ic_mic_black_24dp" />

            <TextView
                android:id="@+id/title_item_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="8dp"
                android:text="@string/title"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
