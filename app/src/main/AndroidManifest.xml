<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.quietlip.voicescapstone">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:windowSoftInputMode="adjustPan"
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="Voices"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.CommentActivity"></activity>
        <activity android:name=".views.BaseActivity" />
        <activity android:name=".views.FeedActivity" />
        <activity android:name=".views.ProfileActivity" />
        <activity android:name=".views.RecordActivity" />
        <activity android:name=".views.RegisterActivity" />
        <activity android:name=".views.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.LoginActivity" />
    </application>

</manifest>